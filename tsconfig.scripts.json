{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "noImplicitUseStrict": false,
    "alwaysStrict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "@types/node"
    ],
    "outDir": "./scripts/",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true
  },
  "include": [
    "scripts/**/*.ts"
  ],
  "exclude": [
    "scripts/dist",
    "node_modules"
  ]
}